<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Exo+2:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link href="/stylesheets/output.css" rel="stylesheet">

</head>

<body class="h-screen bg-[#fcfcfc]">
  <nav class="border-b border-[#2C7481]/20 bg-white">
    <div class="max-w-6xl mx-auto px-6 h-16 flex items-center justify-between">

      <!-- Brand + Context -->
      <div class="flex items-center gap-4">
        <span class="text-[#2C7481] font-bold text-xl font-exo">
          postMINT
        </span>
        <span class="text-sm text-zinc-500">
          Admin Panel
        </span>
      </div>

      <!-- Logout -->
      <form action="/admin/logout" method="POST">
        <button type="submit" class="text-sm font-medium text-zinc-500
                     hover:text-red-600 transition">
          Log out
        </button>
      </form>

    </div>
  </nav>




  <section class="max-w-xl mx-auto px-6 mt-10">
    <div class="border border-[#2C7481]/20 rounded-xl p-6 bg-white">

      <h2 class="text-xl font-semibold text-[#2C7481] mb-4">
        Create new post
      </h2>
      <%- include('partials/flash.ejs') %>

        <form action="/admin/createPost" method="POST" class="space-y-4">

          <input type="text" name="title" placeholder="Post title" value="<%= oldInput.title || '' %>" class="max-w-2/3 border border-zinc-300 rounded-md px-4 py-2
               focus:outline-none focus:border-[#2C7481]" />

          <!-- <textarea name="content" placeholder="Write your thoughts here…" 
        class="w-full h-32 border border-zinc-300 rounded-md px-4 py-2
               resize-none focus:outline-none focus:border-[#2C7481]"> 
              
             </textarea> -->


          <textarea name="content" placeholder="Write your thoughts here…"
            class="w-full h-32 border border-zinc-300 rounded-md px-4 py-2
         resize-none focus:outline-none focus:border-[#2C7481]"><% if (oldInput.content) { %><%= oldInput.content %><% } %></textarea>


          <button type="submit" class="px-6 py-2 rounded-full border border-[#2C7481]
               text-[#2C7481] hover:bg-[#2C7481] hover:text-white
               transition">
            Publish
          </button>

        </form>

    </div>
  </section>


  <section class="mt-10 px-10 pb-20">
    <h2 class="text-xl font-semibold text-[#2C7481] mb-4">
      Your posts
    </h2>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 ">

      <% if (posts.length> 0) { %>
        <% posts.forEach(post=> { %>

          <div class="border border-[#2C7481]/20 rounded-lg p-4 bg-white">

            <h3 class="font-semibold text-lg mb-1">
              <%= post.title %>
            </h3>

            <p class="text-sm text-zinc-500 line-clamp-3">
              <%= post.content %>
            </p>

            <div class="mt-4 flex items-center justify-between text-sm">

              <span class="text-zinc-400">
                <%= post.formattedDate %>
              </span>

              <div class="flex gap-3">
                <a href="/admin/editPost/<%= post._id %>" class="text-[#2C7481] hover:underline">
                  Edit
                </a>
                <form action="/admin/deletePost/<%= post._id %>" method="POST">
                  <button type="submit" class="text-red-600 hover:underline">
                    Delete
                  </button>
                </form>
              </div>

            </div>

          </div>

          <% }) %>
            <% } else { %>
              <p class="text-zinc-500">No posts yet.</p>
              <% } %>

    </div>
  </section>





</body>

</html>