      <section class="max-w-xl mx-auto px-6 mt-10">
  <div class="border border-[#2C7481]/20 rounded-xl p-6 bg-white">
     <a href="/admin/adminPanel"
   class="text-sm text-[#2C7481] hover:underline mb-6 inline-block">
  ← Back to Admin Panel
</a>

    <h2 class="text-xl font-semibold text-[#2C7481] mb-4">
      Edit your Post
    </h2>
   

    <form action="/admin/editPost/<%= editPost._id %>" method="POST" class="space-y-4">

      <input type="text" name="title" placeholder="Post title" autocomplete="off"  value="<%= editPost.title%>"
        class="max-w-2/3 border border-zinc-300 rounded-md px-4 py-2
               focus:outline-none focus:border-[#2C7481]" />
 
      <textarea name="content" placeholder="Write your thoughts here…"  autocomplete="off"
        class="w-full h-32 border border-zinc-300 rounded-md px-4 py-2
               resize-none focus:outline-none focus:border-[#2C7481]"><%= editPost.content%></textarea>

      <button type="submit"
        class="px-6 py-2 rounded-full border border-[#2C7481]
               text-[#2C7481] hover:bg-[#2C7481] hover:text-white
               transition">
        Update Post
      </button>

    </form>

  </div>
</section>
  


    




   


